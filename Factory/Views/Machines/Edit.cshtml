@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h3>Edit Machine Details: @Html.DisplayFor(model => model.MachineType)</h3>
<hr>

@using (Html.BeginForm())
{
  <div class="form-group">
    @Html.HiddenFor(model => model.MachineId)

    <h4>Machine Type:</h4>
    @Html.EditorFor(model => model.MachineType, new { htmlAttributes = new { @class = "form-control" } })
    <br>

    <input type="submit" value="Save" class = "btn btn-dark text"/>
  </div>
}

<br>
<p class="btn btn-dark">@Html.ActionLink("Back to List", "Index", null, null, new { @class = "text" })</p>