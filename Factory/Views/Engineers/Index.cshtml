@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<h2>All Engineers: </h2>
<hr />

@if (@Model.Count == 0)
{
  <h3>There are no Engineers Added.</h3>
}

@foreach (Engineer engineer in ModelExpressionProvider)
{
  <li>@Html.ActionLink($"{engineer.LastName}, {engineer.FirstName}", "Details", new {id = engineer.EngineerId})</li>
}

<br>

<p>@Html.ActionLink("Add Engineer", "Create", "Engineers", null, new {@class = "btn btn-dark"})</p>