@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<h3>Engineers</h3>
<hr>

@if (@Model.Count == 0)
{
  <h4>There are no Engineers Added.</h4>
}

@foreach (Engineer engineer in Model)
{
  <div class="card-deck">
    <div class="card text-center mb-3" style="width: 22rem;">
      <div class="card-body">
        <h5 class="card-title">@Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EngineerId }, new { @class = "text" })</h5>
        <p class="card-text">@engineer.EngineerStatus</p>
      </div>
    </div>
  </div>
}

<p class="btn btn-dark">@Html.ActionLink("Add New Engineer", "Create", null, null, new { @class = "text" })<p>
<p class="btn btn-dark">@Html.ActionLink("Add a Machine", "AddMachine", null, null, new { @class = "text" })<p>
<p class="btn btn-dark">@Html.ActionLink("Return Home", "Index", "Home", null, new { @class = "text" })<p>